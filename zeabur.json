{
  "$schema": "https://schema.zeabur.app/template.json",
  "name": "Harmonic Pattern Scanner",
  "description": "Crypto harmonic pattern scanner with Discord notifications",
  "icon": "https://assets.coingecko.com/coins/images/1/small/bitcoin.png",
  "tags": ["crypto", "trading", "python"],
  "services": [
    {
      "name": "harmonic-scanner",
      "template": "PREBUILT",
      "domainKey": "",
      "env": {
        "DISCORD_WEBHOOK_URL": {
          "description": "Discord Webhook URL for notifications",
          "required": true
        },
        "CLOUD_MODE": {
          "default": "true",
          "description": "Enable cloud mode for auto scheduling"
        },
        "HARMONIC_TIMEFRAME": {
          "default": "1h",
          "description": "Timeframe for harmonic pattern scanning (1h, 4h, 1d)"
        },
        "SCHEDULE_INTERVAL": {
          "default": "240",
          "description": "Scan interval in minutes"
        },
        "PEAK_ORDER": {
          "default": "10",
          "description": "Peak detection sensitivity"
        },
        "KLINE_LIMIT": {
          "default": "500",
          "description": "Number of klines to fetch"
        }
      }
    }
  ]
}
